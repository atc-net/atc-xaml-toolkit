{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": true,
  "include-component-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "pull-request-header": ":robot: Preparing to release next version",
  "pull-request-footer": "This pull request was generated by release-please.",
  "packages": {
    "src/Atc.XamlToolkit": {
      "component": "Atc.XamlToolkit",
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore(xamltoolkit): release version ${version}",
      "extra-files": [
        "Directory.Build.props"
      ]
    },
    "src/Atc.XamlToolkit.Avalonia": {
      "component": "Atc.XamlToolkit.Avalonia",
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore(xamltoolkit-avalonia): release version ${version}",
      "extra-files": [
        "Directory.Build.props"
      ]
    },
    "src/Atc.XamlToolkit.Wpf": {
      "component": "Atc.XamlToolkit.Wpf",
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore(xamltoolkit-wpf): release version ${version}",
      "extra-files": [
        "Directory.Build.props"
      ]
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "New features"
    },
    {
      "type": "fix",
      "scope": "deps",
      "section": "Upgrades"
    },
    {
      "type": "fix",
      "section": "Bug fixes"
    },
    {
      "type": "perf",
      "section": "Performance improvements"
    },
    {
      "type": "revert",
      "section": "Reverts"
    }
  ]
}