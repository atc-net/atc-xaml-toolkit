<Window
    x:Class="Atc.XamlToolkit.AvaloniaSample.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avaloniaSample="clr-namespace:Atc.XamlToolkit.AvaloniaSample"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueConverters="clr-namespace:Atc.XamlToolkit.ValueConverters;assembly=Atc.XamlToolkit.Avalonia"
    Title="Atc XAML Toolkit - Avalonia Sample"
    Width="1200"
    Height="800"
    MinWidth="600"
    MinHeight="600"
    x:DataType="avaloniaSample:MainWindowViewModel"
    WindowStartupLocation="CenterScreen"
    WindowState="{Binding Path=WindowState}"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="300,5,*">

        <!--  Left Side: TreeView  -->
        <Border Grid.Column="0" BorderThickness="0,0,1,0">
            <DockPanel>
                <TextBlock
                    Padding="10"
                    DockPanel.Dock="Top"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Sample Views" />

                <TreeView
                    x:Name="SampleTreeView"
                    Padding="5"
                    BorderThickness="0"
                    ItemsSource="{Binding Path=SampleViews}"
                    SelectionChanged="SampleTreeViewOnSelectionChanged">
                    <TreeView.ItemTemplate>
                        <TreeDataTemplate ItemsSource="{Binding Path=Children}">
                            <StackPanel Orientation="Horizontal">
                                <!--  Folder Icon  -->
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="14"
                                    Foreground="#FFA500"
                                    Text="ðŸ“"
                                    IsVisible="{Binding Path=IsFolder}" />
                                <!--  File Icon  -->
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="14"
                                    Foreground="#4A90E2"
                                    Text="ðŸ“„"
                                    IsVisible="{Binding Path=!IsFolder}" />
                                <TextBlock Text="{Binding Path=Name}" />
                            </StackPanel>
                        </TreeDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.Styles>
                        <Style Selector="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True" />
                            <Setter Property="Padding" Value="2" />
                        </Style>
                    </TreeView.Styles>
                </TreeView>
            </DockPanel>
        </Border>

        <!--  Splitter  -->
        <GridSplitter Grid.Column="1" />

        <!--  Right Side: Content Area  -->
        <Border Grid.Column="2" BorderThickness="1">
            <DockPanel>
                <Border
                    Padding="10"
                    BorderThickness="0,0,0,1"
                    DockPanel.Dock="Top">
                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding Path=SelectedSampleView.Name, FallbackValue='Select a view from the tree'}" />
                        <TextBlock FontSize="10" Text="{Binding Path=CurrentView, StringFormat='CurrentView: {0}'}" />
                    </StackPanel>
                </Border>

                <Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Select a view from the tree to display it here"
                        IsVisible="{Binding Path=CurrentView, Converter={x:Static valueConverters:NullToVisibilityVisibleValueConverter.Instance}}" />
                    <ScrollViewer
                        Margin="20"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
                        <ContentControl
                            Content="{Binding Path=CurrentView}"
                            Focusable="False"
                            IsTabStop="False" />
                    </ScrollViewer>
                </Grid>

            </DockPanel>
        </Border>
    </Grid>

</Window>