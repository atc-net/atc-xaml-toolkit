<UserControl
    x:Class="Atc.XamlToolkit.WinUISample.SampleControls.Mvvm.GeneralAttributes.Person.PersonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:person="using:Atc.XamlToolkit.WinUISample.SampleControls.Mvvm.GeneralAttributes.Person"
    mc:Ignorable="d">

    <Grid ColumnSpacing="10" RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center">
            First name
        </TextBlock>
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{x:Bind ViewModel.FirstName, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center">
            Last name
        </TextBlock>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="{x:Bind ViewModel.LastName, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center">
            Age
        </TextBlock>
        <NumberBox
            Grid.Row="2"
            Grid.Column="1"
            SpinButtonPlacementMode="Inline"
            Value="{x:Bind ViewModel.Age, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center">
            Email
        </TextBlock>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Text="{x:Bind ViewModel.Email, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            VerticalAlignment="Center">
            TheProperty
        </TextBlock>
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Text="{x:Bind ViewModel.TheProperty, Mode=TwoWay}" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            VerticalAlignment="Center">
            Full name
        </TextBlock>
        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{x:Bind ViewModel.FullName, Mode=OneWay}" />

        <Button
            Grid.Row="6"
            Grid.Column="0"
            Command="{x:Bind ViewModel.ShowDataCommand}"
            Content="Show data" />
        <Button
            Grid.Row="6"
            Grid.Column="1"
            Command="{x:Bind ViewModel.SaveCommand}"
            Content="Save data" />

        <Button
            Grid.Row="8"
            Grid.Column="0"
            Command="{x:Bind ViewModel.StartLongRunningWorkAsyncCommand}"
            Content="Start long work" />
        <Button
            Grid.Row="8"
            Grid.Column="1"
            Command="{x:Bind ViewModel.CancelLongRunningWorkCommand}"
            Content="Cancel long work" />

    </Grid>

</UserControl>
