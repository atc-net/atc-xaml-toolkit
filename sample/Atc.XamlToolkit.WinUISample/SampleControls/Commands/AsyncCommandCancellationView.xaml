<UserControl
    x:Class="Atc.XamlToolkit.WinUISample.SampleControls.Commands.AsyncCommandCancellationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commands="using:Atc.XamlToolkit.WinUISample.SampleControls.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <commands:AsyncCommandCancellationViewModel />
    </UserControl.DataContext>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            FontSize="24"
            FontWeight="Bold"
            Text="Async Command Cancellation Sample" />

        <!--  Long Running Task Section  -->
        <Border
            Grid.Row="2"
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Long Running Task" />

                <ProgressBar
                    Height="25"
                    Margin="0,0,0,10"
                    Maximum="100"
                    Minimum="0"
                    Value="{x:Bind ViewModel.Progress, Mode=OneWay}" />

                <TextBlock Margin="0,0,0,10" Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" />

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button
                        Width="120"
                        Command="{x:Bind ViewModel.StartLongRunningTaskCommand}"
                        Content="Start Task" />

                    <Button
                        Width="120"
                        Command="{x:Bind ViewModel.CancelTaskCommand}"
                        Content="Cancel Task" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Search with Cancellation Section  -->
        <Border
            Grid.Row="4"
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Search with Auto-Cancel" />

                <TextBlock Margin="0,0,0,10" TextWrapping="Wrap">
                    <Run Text="Type in the search box. Previous search will be automatically cancelled when you type a new search." />
                </TextBlock>

                <TextBox
                    Height="32"
                    Margin="0,0,0,10"
                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Margin="0,0,0,10"
                    FontStyle="Italic"
                    Text="{x:Bind ViewModel.SearchStatus, Mode=OneWay}" />

                <ListView Height="100" ItemsSource="{x:Bind ViewModel.SearchResults}" />
            </StackPanel>
        </Border>

        <!--  Download Simulation Section  -->
        <Border
            Grid.Row="6"
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="1">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="File Download Simulation" />

                <ProgressBar
                    Height="25"
                    Margin="0,0,0,10"
                    Maximum="100"
                    Minimum="0"
                    Value="{x:Bind ViewModel.DownloadProgress, Mode=OneWay}" />

                <TextBlock Margin="0,0,0,10" Text="{x:Bind ViewModel.DownloadStatus, Mode=OneWay}" />

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button
                        Width="120"
                        Command="{x:Bind ViewModel.StartDownloadCommand}"
                        Content="Start Download" />

                    <Button
                        Width="120"
                        Command="{x:Bind ViewModel.CancelDownloadCommand}"
                        Content="Cancel Download" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
