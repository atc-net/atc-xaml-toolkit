<UserControl
    x:Class="Atc.XamlToolkit.WinUISample.SampleControls.FrameworkElements.DependencyPropertyComponents.StyledLabelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Padding="10,5"
        Background="White"
        BorderBrush="LightGray"
        BorderThickness="1"
        CornerRadius="3">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="{x:Bind FontSize, Mode=OneWay}"
                FontWeight="Bold"
                Foreground="{x:Bind IconColor, Mode=OneWay}"
                Text="{x:Bind Icon, Mode=OneWay}" />

            <TextBlock
                VerticalAlignment="Center"
                FontSize="{x:Bind FontSize, Mode=OneWay}"
                Foreground="{x:Bind TextColor, Mode=OneWay}"
                Text="{x:Bind Text, Mode=OneWay}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
