<UserControl
    x:Class="Atc.XamlToolkit.WinUISample.SampleControls.Behaviors.FocusBehaviorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Atc.XamlToolkit.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Text="FocusBehavior Examples" />

            <!--  Example 1: HasInitialFocus  -->
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="Example 1: HasInitialFocus" />
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="The TextBox below receives focus automatically when loaded:"
                        TextWrapping="Wrap" />

                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Text="{x:Bind ViewModel.InitialFocusText, Mode=TwoWay}">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:FocusBehavior HasInitialFocus="True" />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                </StackPanel>
            </Border>

            <!--  Example 2: IsFocused Two-Way Binding  -->
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="Example 2: IsFocused Two-Way Binding" />
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="The TextBox focus state is synchronized with the ViewModel:"
                        TextWrapping="Wrap" />

                    <TextBox
                        Width="300"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Text="Click to focus">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:FocusBehavior IsFocused="{x:Bind ViewModel.IsTextBoxFocused, Mode=TwoWay}" />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>

                    <TextBlock Margin="0,0,0,10">
                        <Run Text="Is Focused:" />
                        <Run FontWeight="Bold" Text="{x:Bind ViewModel.IsTextBoxFocused, Mode=OneWay}" />
                    </TextBlock>

                    <Button
                        Width="200"
                        HorizontalAlignment="Left"
                        Command="{x:Bind ViewModel.SetFocusCommand}"
                        Content="Set Focus Programmatically" />
                </StackPanel>
            </Border>

            <!--  Example 3: SelectAllOnFocus  -->
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="Example 3: SelectAllOnFocus" />
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="Click or tab into the TextBox - all text will be selected automatically:"
                        TextWrapping="Wrap" />

                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Text="This text will be selected on focus">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:FocusBehavior SelectAllOnFocus="True" />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                </StackPanel>
            </Border>

            <!--  Example 4: FocusTrigger  -->
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="Example 4: FocusTrigger" />
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="Click the button to trigger focus on the TextBox below:"
                        TextWrapping="Wrap" />

                    <Button
                        Width="150"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Command="{x:Bind ViewModel.TriggerFocusCommand}"
                        Content="Trigger Focus" />

                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Text="I will receive focus when triggered">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:FocusBehavior FocusTrigger="{x:Bind ViewModel.FocusTrigger, Mode=OneWay}" />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                </StackPanel>
            </Border>

            <!--  Example 5: Combined Features  -->
            <Border
                Margin="0,0,0,20"
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="Bold"
                        Text="Example 5: Combined Features" />
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="This example combines SelectAllOnFocus with IsFocused binding:"
                        TextWrapping="Wrap" />

                    <TextBox
                        Width="300"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left"
                        Text="Combined features example">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:FocusBehavior IsFocused="{x:Bind ViewModel.IsCombinedFocused, Mode=TwoWay}" SelectAllOnFocus="True" />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>

                    <TextBlock>
                        <Run Text="Focus State:" />
                        <Run FontWeight="Bold" Text="{x:Bind ViewModel.IsCombinedFocused, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
