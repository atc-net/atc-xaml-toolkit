<UserControl
    x:Class="Atc.XamlToolkit.WpfSample.SampleControls.Behaviors.KeyboardNavigationBehaviorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Atc.XamlToolkit.Behaviors;assembly=Atc.XamlToolkit.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Atc.XamlToolkit.WpfSample.SampleControls.Behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:KeyboardNavigationBehaviorViewModel />
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Text="KeyboardNavigationBehavior Examples" />

            <!--  Example: Grid Navigation  -->
            <GroupBox Margin="0,0,0,20" Header="Example: Arrow Key Grid Navigation">
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="Use arrow keys to navigate the grid. Press Enter to select, Escape to reset."
                        TextWrapping="Wrap" />

                    <Border
                        Width="400"
                        Height="300"
                        HorizontalAlignment="Left"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        Focusable="True">
                        <i:Interaction.Behaviors>
                            <behaviors:KeyboardNavigationBehavior
                                DownCommand="{Binding NavigateDownCommand}"
                                EnterCommand="{Binding HandleEnterCommand}"
                                EscapeCommand="{Binding HandleEscapeCommand}"
                                LeftCommand="{Binding NavigateLeftCommand}"
                                RightCommand="{Binding NavigateRightCommand}"
                                UpCommand="{Binding NavigateUpCommand}" />
                        </i:Interaction.Behaviors>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--  Row 0  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(0,0)" />
                            </Border>
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(0,1)" />
                            </Border>
                            <Border
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(0,2)" />
                            </Border>

                            <!--  Row 1  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(1,0)" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(1,1)" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(1,2)" />
                            </Border>

                            <!--  Row 2  -->
                            <Border
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(2,0)" />
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(2,1)" />
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="5"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="(2,2)" />
                            </Border>

                            <!--  Highlight current position  -->
                            <Ellipse
                                Grid.Row="{Binding CurrentRow}"
                                Grid.Column="{Binding CurrentColumn}"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="LightBlue"
                                Opacity="0.5" />
                        </Grid>
                    </Border>

                    <TextBlock Margin="0,10,0,0">
                        <Run Text="Current Position: " />
                        <Run FontWeight="Bold" Text="{Binding CurrentRow, StringFormat='({0},'}" />
                        <Run FontWeight="Bold" Text="{Binding CurrentColumn, StringFormat=' {0})'}" />
                    </TextBlock>

                    <TextBlock
                        Margin="0,10,0,5"
                        FontWeight="Bold"
                        Text="Navigation Log:" />
                    <TextBox
                        Height="150"
                        FontFamily="Consolas"
                        IsReadOnly="True"
                        Text="{Binding NavigationLog, Mode=OneWay}"
                        VerticalScrollBarVisibility="Auto" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
