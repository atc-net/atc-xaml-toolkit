<UserControl
    x:Class="Atc.XamlToolkit.WpfSample.SampleControls.FrameworkElements.DependencyPropertyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dependencyPropertyComponents="clr-namespace:Atc.XamlToolkit.WpfSample.SampleControls.FrameworkElements.DependencyPropertyComponents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <dependencyPropertyComponents:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Text="DependencyProperty Source Generator Examples" />

            <Separator Margin="0,10" />

            <!--  Example 1: Field-Level Attribute - Color Picker Control  -->
            <GroupBox Margin="0,10" Header="Example 1: Field-Level Attribute - Color Picker Control">
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="The ColorPickerControl uses field-level [DependencyProperty] attributes on private fields."
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,0,0,10"
                        FontStyle="Italic"
                        Foreground="CadetBlue"
                        Text="Code: [DependencyProperty(PropertyChangedCallback = nameof(OnColorChanged))] private Color selectedColor;"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,0,0,10"
                        Text="Select colors using the sliders. The control uses dependency properties for data binding:"
                        TextWrapping="Wrap" />

                    <dependencyPropertyComponents:ColorPickerControl
                        x:Name="ColorPicker"
                        Width="400"
                        HorizontalAlignment="Left"
                        SelectedColor="Blue" />

                    <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Selected Color Preview: " />
                        <Border
                            Width="100"
                            Height="40"
                            Margin="10,0"
                            Background="{Binding SelectedColor, ElementName=ColorPicker, Converter={StaticResource ColorToBrushConverter}}"
                            BorderBrush="Black"
                            BorderThickness="1" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding SelectedColor, ElementName=ColorPicker}" />
                    </StackPanel>

                    <TextBlock
                        Margin="0,15,0,0"
                        FontSize="12"
                        Foreground="Gray"
                        Text="Generated: SelectedColorProperty, RedProperty, GreenProperty, BlueProperty with getters/setters"
                        TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>

            <!--  Example 2: Class-Level Attribute - Label Control  -->
            <GroupBox Margin="0,10" Header="Example 2: Class-Level Attribute - Label Control">
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,10"
                        Text="The StyledLabelControl uses class-level [DependencyProperty&lt;T&gt;] attributes for explicit property declarations."
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,0,0,10"
                        FontStyle="Italic"
                        Foreground="CadetBlue"
                        Text="Code: [DependencyProperty&lt;string&gt;(&quot;Text&quot;, DefaultValue = &quot;&quot;)]"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,0,0,10"
                        Text="The styled label below demonstrates multiple dependency properties:"
                        TextWrapping="Wrap" />

                    <dependencyPropertyComponents:StyledLabelControl
                        Margin="0,10"
                        FontSize="16"
                        Icon="★"
                        IconColor="Gold"
                        Text="This is a styled label with an icon"
                        TextColor="DarkBlue" />

                    <dependencyPropertyComponents:StyledLabelControl
                        Margin="0,10"
                        FontSize="14"
                        Icon="⚠"
                        IconColor="Orange"
                        Text="Warning: Check your configuration"
                        TextColor="DarkRed" />

                    <dependencyPropertyComponents:StyledLabelControl
                        Margin="0,10"
                        FontSize="18"
                        Icon="✓"
                        IconColor="Green"
                        Text="Success! Operation completed"
                        TextColor="DarkGreen" />

                    <TextBlock
                        Margin="0,15,0,0"
                        FontSize="12"
                        Foreground="Gray"
                        Text="Generated: TextProperty, TextColorProperty, IconProperty, IconColorProperty, FontSizeProperty"
                        TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>

            <!--  Comparison Section  -->
            <GroupBox Margin="0,10" Header="Comparison: Class vs Field Attribute">
                <StackPanel Margin="10">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="SemiBold"
                        Text="Field-Level Attribute Approach:" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ Property name and type inferred from field"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ Less verbose, more concise code"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ Field must be private and camelCase"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ Best for controls with few properties"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,15,0,10"
                        FontWeight="SemiBold"
                        Text="Class-Level Attribute Approach:" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ Explicit property name and type declaration"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ Multiple properties declared at class level"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ More self-documenting and visible"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="10,0,0,5"
                        Text="✓ No backing fields needed"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Margin="0,15,0,0"
                        FontStyle="Italic"
                        Foreground="DarkGreen"
                        Text="Both approaches generate the same WPF dependency property infrastructure with full data binding support!"
                        TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
